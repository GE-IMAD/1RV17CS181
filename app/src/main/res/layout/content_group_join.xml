<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.fragments.GroupJoinFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/groupCodeTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:text="@string/group_code_have"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="?attr/colorText"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/groupCodeInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="44dp"
            android:textColorHint="?attr/colorText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupCodeTV">

            <pl.pomocnawirus.view.ui.MyTextInputEditText
                android:id="@+id/groupCodeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorBackground"
                android:hint="@string/group_code"
                android:inputType="textEmailAddress"
                android:textColor="?attr/colorText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/joinGroupBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="?attr/colorAccent"
            android:text="@string/join"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:textColor="?attr/colorBackground"
            app:cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="@+id/groupCodeInputLayout"
            app:layout_constraintStart_toStartOf="@+id/groupCodeInputLayout"
            app:layout_constraintTop_toBottomOf="@id/groupCodeInputLayout" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/groupCodeDontHaveTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="@string/group_code_dont_have"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="?attr/colorText"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/groupCodeTV"
            app:layout_constraintStart_toStartOf="@+id/groupCodeTV"
            app:layout_constraintTop_toBottomOf="@+id/joinGroupBtn" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/browseGroupsBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/browse_groups"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:textColor="?colorAccent"
            app:cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="@+id/joinGroupBtn"
            app:layout_constraintStart_toStartOf="@+id/joinGroupBtn"
            app:layout_constraintTop_toBottomOf="@id/groupCodeDontHaveTV"
            app:strokeColor="?colorAccent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createGroupBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/create_group"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:textColor="?colorAccent"
            app:cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="@+id/joinGroupBtn"
            app:layout_constraintStart_toStartOf="@+id/joinGroupBtn"
            app:layout_constraintTop_toBottomOf="@id/browseGroupsBtn"
            app:strokeColor="?colorAccent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>